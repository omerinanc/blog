<h1>Dwarves</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Height</th>
      <th>armor_class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dwarves.each do |dwarf| %>
      <tr>
        <td><%= dwarf.name %></td>
        <td><%= dwarf.height %></td>
        <td><%= dwarf.armor_class %></td>
        <td><%= link_to 'Show', dwarf %></td>
        <td><%= link_to 'Edit', edit_dwarf_path(dwarf) %></td>
        <td><%= link_to 'Destroy', dwarf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

