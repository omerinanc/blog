<p id="notice"><%= notice %></p>

<h1>Elves</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Damage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @elves.each do |elf| %>
      <tr>
        <td><%= elf.name %></td>
        <td><%= elf.level %></td>
        <td><%= elf.damage %></td>
        <td><%= link_to 'Show', elf %></td>
        <td><%= link_to 'Edit', edit_elf_path(elf) %></td>
        <td><%= link_to 'Destroy', elf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Elf', new_elf_path %>
